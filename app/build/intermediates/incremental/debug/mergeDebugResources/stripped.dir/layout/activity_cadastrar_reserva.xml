<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBD5EA"
    tools:context=".CadastrarReservaActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_TituloReserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="15dp"
        android:text="Reservas"
        app:layout_constraintEnd_toStartOf="@+id/spinner_EmbSegunda"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_Segunda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="91dp"
        android:layout_marginBottom="91dp"
        android:text="Segunda-Feira"
        android:textColor="@color/black"
        app:buttonIconTint="#A02F2F"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_EmbTerca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#842B2B"
        android:backgroundTint="#D13535"
        android:text="Enviar"
        app:iconTint="#FF8585"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner_EmbSegunda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="91dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/spinner_EmbTerca"
        app:layout_constraintStart_toStartOf="@+id/spinner_EmbTerca"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_Terca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="118dp"
        android:layout_marginBottom="118dp"
        android:text="TerÃ§a-Feira"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkBox_Segunda" />

    <CheckBox
        android:id="@+id/checkBox_Quarta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="63dp"
        android:text="Quarta-Feira"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_Terca" />

    <CheckBox
        android:id="@+id/checkBox_Quinta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="Quinta-Feira"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_Quarta" />

    <CheckBox
        android:id="@+id/checkBox_Sexta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="83dp"
        android:text="Sexta-Feira"
        app:layout_constraintBottom_toTopOf="@+id/button_Enviar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_EmbQuinta" />

    <Spinner
        android:id="@+id/spinner_DesSegunda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/spinner_EmbSegunda"
        app:layout_constraintTop_toBottomOf="@+id/spinner_EmbSegunda" />

    <Spinner
        android:id="@+id/spinner_EmbTerca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_EmbQuarta"
        app:layout_constraintStart_toStartOf="@+id/spinner_EmbQuarta"
        app:layout_constraintTop_toBottomOf="@+id/spinner_DesSegunda" />

    <Spinner
        android:id="@+id/spinner_DesTerca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toStartOf="@+id/spinner_EmbTerca"
        app:layout_constraintTop_toBottomOf="@+id/spinner_EmbTerca" />

    <Spinner
        android:id="@+id/spinner_EmbQuarta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_EmbQuinta"
        app:layout_constraintStart_toStartOf="@+id/spinner_EmbQuinta"
        app:layout_constraintTop_toBottomOf="@+id/spinner_DesTerca" />

    <Spinner
        android:id="@+id/spinner_DesQuarta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_EmbQuarta"
        app:layout_constraintTop_toBottomOf="@+id/spinner_EmbQuarta" />

    <Spinner
        android:id="@+id/spinner_EmbQuinta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_EmbSexta"
        app:layout_constraintStart_toStartOf="@+id/spinner_EmbSexta"
        app:layout_constraintTop_toBottomOf="@+id/spinner_DesQuarta" />

    <Spinner
        android:id="@+id/spinner_DesQuinta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_EmbQuinta"
        app:layout_constraintTop_toBottomOf="@+id/spinner_EmbQuinta" />

    <Spinner
        android:id="@+id/spinner_EmbSexta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/spinner_DesQuinta" />

    <Spinner
        android:id="@+id/spinner_DesSexta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_EmbSexta"
        app:layout_constraintTop_toBottomOf="@+id/spinner_EmbSexta" />

</androidx.constraintlayout.widget.ConstraintLayout>